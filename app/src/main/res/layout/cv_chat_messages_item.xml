<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Yesterday"
            android:textColor="@color/white"
            android:textSize="12sp" />
    <RelativeLayout
        android:id="@+id/rl_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sivChatImage"
            android:layout_width="@dimen/dimen_64dp"
            android:layout_height="@dimen/dimen_64dp"
            android:padding="@dimen/dimen_1dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/user_profile"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChatCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignEnd="@+id/sivChatImage"
            android:layout_alignBottom="@+id/sivChatImage"
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/chat_item_count"
            android:gravity="center"
            android:minWidth="17sp"
            android:minHeight="17sp"
            android:padding="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="1dp"
            android:scaleType="fitStart"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dimen_14sp"
            android:visibility="visible" />
    </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMessageTime"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:layout_toEndOf="@+id/rl_chat"
            android:fontFamily="@font/sf_pro_text_semi_bold"
            android:text="Notification Name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dimen_16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChatMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rl_chat"
            android:layout_below="@+id/tvPersonName"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:text="Notification Body"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dimen_14sp"
            android:fontFamily="@font/sf_pro_text_regular"/>

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/tvChatMessage"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>